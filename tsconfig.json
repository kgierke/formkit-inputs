  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "dts"
  },
  "include": ["./src"],
  "exclude": ["./node_modules", "./dist"]
}
